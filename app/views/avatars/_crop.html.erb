<%= image_tag avatarable.avatar_tmp_public_path(root_path), class: 'avatar-crop', "data-aspect_ratio" => avatarable.class.logo_aspect_ratio %>

<%= form_for avatarable, url: avatar_path, multipart: true, remote: true do |f| %>
  <% %w( x y w ).each do |attr| %>
    <%= f.hidden_field "logo_crop_#{ attr }" %>
  <% end %>
    <%= f.hidden_field :avatar_tmp_basename %>

  <%= f.submit t('avatar.crop_submit'), class: 'btn btn-default' %>
<% end %>
